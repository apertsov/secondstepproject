@model List<DistanceLessons.Models.Lesson>
@{
    ViewBag.Title = "Тестувальна";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@foreach (var lesson in Model)
{
    @Html.ActionLink("Редагувати тести з лекції : " + lesson.Title.ToString(), "ShowModuleTests", "Test", new { id = lesson.LessonId }, null) 
    if (lesson.ModuleId != null)
    {
        <br />
    @Html.ActionLink("Результати тестування з модуля " + lesson.Module.Title, "DetailModuleTestResults", "Test", new { id = (Guid)lesson.ModuleId }, null) 
    <pre> 
    @Html.ActionLink("Здати тести з модуля " + lesson.Module.Title, "PassModule", "Test", new { id = (Guid)lesson.ModuleId }, null) 
    </pre>     
    <pre>
     @Html.ActionLink("Онулити результат тестування з модуля " + lesson.Module.Title, "DeletePassModule", "Test", new { id = (Guid)lesson.ModuleId }, null) 
     </pre>
    }
    <br />
}