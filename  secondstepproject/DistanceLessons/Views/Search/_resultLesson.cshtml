@model IEnumerable<DistanceLessons.Models.Lesson>

@{
    var grid = new WebGrid(Model, rowsPerPage: 10, defaultSort: "Title", ajaxUpdateContainerId: "LesGrid");
   @grid.GetHtml(
        tableStyle: "center",
       alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Title","Назва лекції",  format: @<text><i>@item.Title</i> </text>),
            grid.Column("Cours.Title","Предмет",  format: @<text><i>@item.Cours.Title</i> </text>)
                            ));
                          }

