@model IEnumerable<DistanceLessons.Models.Cours>

@{
    var grid = new WebGrid(Model, rowsPerPage: 10, defaultSort: "Title", ajaxUpdateContainerId: "myGrid");
   @grid.GetHtml(
        tableStyle: "center",
       alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Title","Назва предмету",  format: @<text><i>@item.Title</i> </text>),
            grid.Column("Category.Category1","Категорія", format:@<i>@item.Category.Category1</i>),
            grid.Column("User.Login", "Викладач", format:@<text><i>@item.User.Login</i> </text>),
            grid.Column("IsSubscribing", "Чи необхідна підписка", format:@<i>@item.IsSubscribing</i>)));
                          }

