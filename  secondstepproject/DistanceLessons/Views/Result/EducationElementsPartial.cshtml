@model DistanceLessons.Models.EducationElementsModel
<table style="width: 100%;">
    <tbody align="center">
        <tr>
            <td style="width: 33%;">
                Категорія
            </td>
            <td>
                Курс
            </td>
            <td>
                Модуль
            </td>
        </tr>
        <tr>
            <td>
                @foreach (var category in Model.Categories)
                {
                    if (Model.pickedElement == category.Key) { @Html.TextHtml(">"); } 
                    @Ajax.ActionLink(category.Value, Model.ControllerName, new { id = category.Key, type = 1 }, new AjaxOptions() { UpdateTargetId = "educationelements", InsertionMode = InsertionMode.Replace  }) <br />
                }
            </td>
            <td>
                @foreach (var course in Model.Courses)
                {
                    if (Model.pickedElement == course.Key) { @Html.TextHtml(">"); } 
                    @Ajax.ActionLink(course.Value, Model.ControllerName, new { id = course.Key, type = 2 }, new AjaxOptions() { UpdateTargetId = "educationelements", InsertionMode = InsertionMode.Replace })   <br />
                }
            </td>
            <td>
                @foreach (var module in Model.Modules)
                {
                    if (Model.pickedElement == module.Key)
                    { @Html.TextHtml(">");
                    } 
                    @Ajax.ActionLink(module.Value, Model.ControllerName, new { id = module.Key, type = 3 }, new AjaxOptions() { UpdateTargetId = "educationelements", InsertionMode = InsertionMode.Replace })   <br />
                }
            </td>
        </tr>
    </tbody>
</table>

