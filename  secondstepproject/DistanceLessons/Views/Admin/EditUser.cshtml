@model DistanceLessons.Models.User

@{
    ViewBag.Title = "Редагувати користувача";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати користувача</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Користувач</legend>

        @Html.HiddenFor(model => model.UserId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Login)
    </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Role.Name)
        </div>
        <div class="editor-field">
           @{
    List<DistanceLessons.Models.Role> list = ViewBag.Roles;
    var items = new SelectList(list, "RoleID", "Name");
            }
            @Html.DropDownListFor(model => model.RoleId, @items)
            @Html.ValidationMessageFor(model => model.Role)
        </div>
                
                <div class="editor-label">
            @Html.LabelFor(model => model.IsActived)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActived)
            @Html.ValidationMessageFor(model => model.IsActived)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsLockedOut)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsLockedOut)
            @Html.ValidationMessageFor(model => model.IsLockedOut)
        </div>

        
        <p>
        <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Users")
</div>
