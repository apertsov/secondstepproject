            grid.Column("Login", Html.Resource("Metadata, Lo_Login"), format: @<text>@item.Login</text>),
            grid.Column("Role.Name", Html.Resource("Layout, role"), format:@<i>@item.Role.Name</i>),
            grid.Column(format: (item) =>
                new HtmlString(
                    Html.ActionLink("___", "EditUser", new { id = item.UserId }, new { title = Html.Resource("Layout, edit"), @class = "edit" }).ToString()
                  + Html.ActionLink("___", "DetailsUser", new { id = item.UserId }, new { title=Html.Resource("Layout, detail"), @class="details"}).ToString()
                              )
                              )));
            
 }

