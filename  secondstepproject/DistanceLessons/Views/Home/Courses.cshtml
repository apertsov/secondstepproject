@model List<DistanceLessons.Models.CategoryCourse>
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table style="border: 2px solid black; width: 100%;">
    <caption>
        <h2>
            Курси</h2>
    </caption>
    <tbody align="center">
        <tr>
            <td style="width: 33%;">
                Курс
            </td>
            <td>
                Опис
            </td>
            <td>
                Категорія
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseTitle
                </td>
                <td>@item.CourseDescription
                </td>
                <td>@item.CategoryTitle
                </td>
            </tr>
        }
    </tbody>
</table>
