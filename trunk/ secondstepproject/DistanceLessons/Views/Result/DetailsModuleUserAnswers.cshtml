@model DistanceLessons.Models.ModuleUserAnswers
@if (Model.Answers.Count == 0)
{
    <h2>
        @Model.Username не проходив тестування з цього предмету
    </h2>
}
else
{
    <h3>
        Результат здачі модуля @Model.ModuleTitle користувачем @Model.Username : @Model.Result
        балів</h3>
    
    @Ajax.ActionLink("Повернутись до результатів модуля", Model.Parameters.ControllerName, new { id = Model.Parameters.pickedElement, divIdToReplace=Model.Parameters.DivIdToReplace, type = DistanceLessons.Models.ElementsType.Module }, new AjaxOptions() { UpdateTargetId = Model.Parameters.DivIdToReplace, InsertionMode = InsertionMode.Replace }) <br />
 
    <table style="width: 100%;">
        <tbody align="center">
            <tr>
                <td style="width: 33%;">
                    Тест
                </td>
                <td>
                    Відповідь користувача
                </td>
                <td>
                    Результат
                </td>
            </tr>
            @foreach (DistanceLessons.Models.DetailAnswersModel detailModel in Model.Answers)
            {
                <tr>
                    <td align="justify" style="padding: 10px;">
                        @detailModel.TestAndAnswers.Test.Question<br />
                        @{Html.RenderPartial("ShowAnswersPartial", detailModel.TestAndAnswers.AnswerList, Html.ViewData);}
                    </td>
                    <td>
                        @if (detailModel.UserAnswers.Count == 0)
                        {
                            @Html.TextHtml("немає відповіді");
                        }
                        @foreach (DistanceLessons.Models.UserAnswer answer in detailModel.UserAnswers)
                        {                      
                            @answer.Answer.Answer1 <br /> 
                        }
                    </td>
                    <td>
                        @Html.CheckBoxToText(detailModel.IsRightAnswer)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
