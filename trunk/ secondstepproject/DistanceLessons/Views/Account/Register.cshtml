@model DistanceLessons.Models.RegisterModel

@{
    ViewBag.Title = Html.Resource("Title");
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@Html.ValidationSummary(true, Html.Resource("SummaryError"), new {@class="error"})

@using (Html.BeginForm((string)ViewBag.FormAction, "Account"))
{
<table class="center" cellspacing="10" width="50%">
    <tr>
        <td class="editor-label">@Html.LabelFor(m => m.UserName)</td>
        <td class="editor-field">@Html.TextBoxFor(m => m.UserName, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(m => m.UserName)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(m => m.Email)</td>
        <td class="editor-field">@Html.TextBoxFor(m => m.Email, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(m => m.Email)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(m => m.Password)</td>
        <td class="editor-field">@Html.PasswordFor(m => m.Password, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(m => m.Password)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(m => m.ConfirmPassword)</td>
        <td class="editor-field">@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(m => m.ConfirmPassword)</td>
    </tr>
</table>
<div class="item" align="center">
    <input type="submit" value=@Html.Resource("Register") />
</div>
}