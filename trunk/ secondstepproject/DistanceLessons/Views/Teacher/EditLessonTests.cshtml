@model List<DistanceLessons.Models.TestAndAnswersModel>

@{
    ViewBag.Title = Html.Resource("Layout, _tests_edit");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.Resource("Layout, _tests_edit")</h2>

@for (int i = 0; i < Model.Count; i++)
{
    @Model[i].Test.Question <br />
    for (int j = 0; j < Model[i].AnswerList.Count; j++)
    {
        @Html.CheckBoxFor(model => model[i].AnswerList[j].Valid)
        @Html.TextBoxFor(model => model[i].AnswerList[j].Answer1)
        <br />
    }
}

