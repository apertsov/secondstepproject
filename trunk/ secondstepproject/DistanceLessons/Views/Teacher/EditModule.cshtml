@model DistanceLessons.Models.Module

@{
    ViewBag.Title = "Редагування модулю";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагування модулю</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(model => model.ModuleId)
         @Html.HiddenFor(model => model.CourseId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TimeForPassTest)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TimeForPassTest)
            @Html.ValidationMessageFor(model => model.TimeForPassTest)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateBeginTesting)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateBeginTesting)
            @Html.ValidationMessageFor(model => model.DateBeginTesting)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateEndTesting)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateEndTesting)
            @Html.ValidationMessageFor(model => model.DateEndTesting)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.CountQuestions)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CountQuestions)
            @Html.ValidationMessageFor(model => model.CountQuestions)
        </div>
        <p>
            <input type="submit" value="Зберегти зміни" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Повернутись без збереження змін", "Course", new { id = Model.CourseId})
</div>
