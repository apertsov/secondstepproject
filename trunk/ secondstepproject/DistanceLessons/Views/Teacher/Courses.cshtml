@model IEnumerable<DistanceLessons.Models.Cours>

@{
    ViewBag.Title = "Предмети";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>

@{
    var grid = new WebGrid(Model, rowsPerPage: 10, defaultSort: "Title");
   @grid.GetHtml(
        tableStyle: "center",
        headerStyle: "center",
        alternatingRowStyle: "center",
        htmlAttributes: "cellspacing=10",
        columns: grid.Columns(
            grid.Column("Title", "Назва предмету", format: (item) => new HtmlString(Html.ActionLink((string)item.Title, "Course", new { id = item.CourseId }, null).ToString())),
            grid.Column("Category.Category1", "Категорія", format: @<i>@item.Category.Category1</i>),
            grid.Column("User.Login", "Викладач", format: @<i>@item.User.Login</i>)
            ));
                          }
                         