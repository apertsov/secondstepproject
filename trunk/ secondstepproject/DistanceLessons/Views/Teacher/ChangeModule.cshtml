@model DistanceLessons.Models.Lesson

@{
    ViewBag.Title = "Редагування лекції";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагування лекції</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(model => model.LessonId)
        @Html.HiddenFor(model => model.Text)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.CourseId)


        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div>
            @Html.DisplayFor(model => model.Title)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Module.Title)
        </div>
        <div class="editor-field">
 @{
     List<DistanceLessons.Models.Module> list = ViewBag.Modules;
    var items = new SelectList(list, "ModuleId", "Title");
            }

            @Html.DropDownListFor(model => model.ModuleId, @items)
             
            @Html.ValidationMessageFor(model => model.ModuleId)
        </div>

         <p>
            <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}

<div>
@if (Model.ModuleId != null)
{ 
    @Html.ActionLink("Повернутись до модулю", "Lesson", new { id = Model.ModuleId });
}
else
{
   @Html.ActionLink("Повернутись до курсу", "Course", new { id = Model.CourseId });
}
</div>
