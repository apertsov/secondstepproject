@model IEnumerable<DistanceLessons.Models.Lesson>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Пошук Lesson</h2>


@using (Html.BeginForm())
{
    <fieldset>

        <div>
              @Html.DisplayNameFor(model => model.Title)
         </div>
         
          <div>
             @Html.TextBox("title", new { @class = "editor" }) 
         </div>
   
         <div>
              @Html.DisplayNameFor(model => model.Description)
          </div>
        
          <div>
            <input type="text" id="description" name="description" class = "editor" />
          </div>

        <p>
            <button type="submit">Шукати</button>
        </p>
    </fieldset>
}

<div id="Grid">
    @Html.Partial("_resultLesson", Model)
</div>