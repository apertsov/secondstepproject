@model IEnumerable<DistanceLessons.Models.Category>

@{
    ViewBag.Title = "Категорії";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Категорії предметів</h2>

<p>
    @Html.ActionLink("Створити категорію", "CreateCategory")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category1)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "EditCategory", new { id = item.CategoryId }) |
            @Html.ActionLink("Видалити", "DeleteCategory", new { id = item.CategoryId }, new { onclick = "return confirm('Дійсно бажаєте видалити категорію? З видаленням категорії автоматично будуть видалені всі предмети, які містить категорія, і всі дані, що з ними пов`язані!!!')" })
        </td>
    </tr>
}

</table>
