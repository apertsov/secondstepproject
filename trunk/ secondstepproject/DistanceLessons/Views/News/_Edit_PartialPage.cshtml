@model DistanceLessons.Models.News

@{
    ViewBag.Title = Html.Resource("Title");
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.NewId)
<table class="left" cellspacing="10">
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Title)</td>
        <td class="editor-field">@Html.TextBoxFor(model => model.Title, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Title)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Text)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.Text, new { @class = "textboxarea" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Text)</td>
    </tr>
</table>
    
<div class="item" align="right">
    <input type="submit" value=@Html.Resource("Layout, save") />
    @Ajax.ActionLink(Html.Resource("Layout, back"), "Index", new AjaxOptions() { UpdateTargetId = "news_ajax", InsertionMode = InsertionMode.Replace })
</div>
}
