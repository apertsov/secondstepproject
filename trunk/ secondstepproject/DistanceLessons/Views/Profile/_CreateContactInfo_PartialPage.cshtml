@model DistanceLessons.Models.Contact

@{
    ViewBag.Title = "Реєстрування в базі контактних даних";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h3>Контактні дані</h3>

@using (Html.BeginForm())
{
@Html.ValidationSummary(true)
<table class="center" cellspacing="10">
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Skype)</td>
        <td class="editor-field">@Html.TextBoxFor(model => model.Skype, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Skype)</td>
    </tr>

    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.ICQ_QIP)</td>
        <td class="editor-field">@Html.TextBoxFor(model => model.ICQ_QIP, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.ICQ_QIP)</td>
    </tr>

    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Telephone)</td>
        <td class="editor-field">@Html.TextBoxFor(model => model.Telephone, new { @class = "editor" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Telephone)</td>
    </tr>

    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Other)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.Other, new { @class = "textboxarea_short" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Other)</td>
    </tr>

    <tr>
        <td class="error" colspan="2" align="center" style="border-top: 1px solid silver; padding-top: 20px;"></td>
    </tr>
</table>
<div class="item" align="center">
    <input type="submit" value="Створити" />
</div>
}