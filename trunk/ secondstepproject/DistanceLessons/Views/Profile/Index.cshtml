@{
    ViewBag.Title = Html.Resource("personal_room");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Content/script/scriptbreaker-multiple-accordion.js")" type="text/javascript"> </script>
    <script language="JavaScript">
        		    $(document).ready(function() {
        		        $(".topnav").accordion({
        		                accordion: true,
        		                speed: 600
        		            });
        		    });
    </script>

    <div id="profile">
        <ul class="topnav" class=box_shdw_right>
            <li><a>@Html.Resource("general_information")</a>
                <ul style="display: block;">
                    <li>@Ajax.ActionLink(Html.Resource("profile"), "Index", new AjaxOptions {UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace})</li>
                    <li>@Ajax.ActionLink(Html.Resource("personal_data"), "Information", new AjaxOptions {UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace})</li>
                    <li>@Ajax.ActionLink(Html.Resource("contact_data"), "ContactInformation", new AjaxOptions {UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace})</li>
                </ul>
            </li>
            <li><a>@Html.Resource("messages")</a>
                <ul>
                    <li>@Html.ActionLink(Html.Resource("m_write"), "NewMessage")</li>
                    <li><a>@Html.Resource("m_title")</a>
                        <ul>
                            <li>@Ajax.ActionLink(Html.Resource("m_all"), "Messages", new {type = 0}, new AjaxOptions {UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace})</li>
                            <li>@Ajax.ActionLink(Html.Resource("m_new"), "NewMessages", new AjaxOptions {UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace})</li>
                            <li>@Ajax.ActionLink(Html.Resource("m_to"), "Messages", new { type = 1 }, new AjaxOptions { UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace })</li>
                            <li>@Ajax.ActionLink(Html.Resource("m_from"), "Messages", new { type = 2 }, new AjaxOptions { UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace })</li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
        <div id="profile_ajax" class="box_shdw_bottom">
            @{ Html.RenderPartial("_Info_PartialPage", Model); }
        </div>
    </div> }