@using DistanceLessons.Models
@{
    ViewBag.Title = "Особистий кабінет";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Content/script/scriptbreaker-multiple-accordion.js")" type="text/javascript"> </script>
    <script language="JavaScript">
        		    $(document).ready(function() {
        		        $(".topnav").accordion({
        		                accordion: true,
        		                speed: 600
        		            });
        		    });
    </script>

    <div id="profile">
        <ul class="topnav" class=box_shdw_right>
            <li>@Ajax.ActionLink("Профіль", "Info", new { user = User.Identity.Name }, new AjaxOptions() { UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace })
                <ul style="display: block;">
                    <li>@Ajax.ActionLink("Особиста інформація", "Information", new AjaxOptions() {UpdateTargetId = "profile_ajax", InsertionMode = InsertionMode.Replace})</li>
                    <li><a href="#">submenu</a>
                        <ul>
                            <li><a href="#">під-під</a></li>
                            <li><a href="#">пііід</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
        <div id="profile_ajax" class="box_shdw_bottom">
        @if ((bool)Html.ViewData["exist"]) { Html.RenderPartial("_Info_PartialPage", Model); }
         else { Html.RenderPartial("_CreateInfo_PartialPage");}
        </div>
    </div>
}