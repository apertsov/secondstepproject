@model DistanceLessons.Models.SendMessageModel

<script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) 
{
@Html.ValidationSummary(true)
<table class="center" cellspacing="10">
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Message.Title)</td>
        <td class="editor-field">@Html.TextBoxFor(model => model.Message.Title, new{@class="editor"})</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Message.Title)</td>
    </tr>

    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Name)</td>
        <td class="editor-field">@Html.TextBoxFor(model => model.Name, new{@class="editor"})</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Name)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Message.Message1)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.Message.Message1, new { @class = "textboxarea" })</td>
    </tr>
    <tr>
        <td></td>
        <td class="error">@Html.ValidationMessageFor(model => model.Message.Message1)</td>
    </tr>
</table>
<div class="item" align="center">
    <input type="submit" value="Створити" />
</div>
}