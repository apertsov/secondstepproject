<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>University - @ViewBag.Title</title>
        <link href="@Url.Content("~/Content/WebGridStyle.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"> </script>
        <script type="text/javascript" src="../../Scripts/jquery.unobtrusive-ajax.min.js"> </script> 
        <!--NotDefaultResources-->
        <script type="text/javascript">
        var ie = (document.getElementById && document.documentElement.behaviorUrns) ? true : false;

        if (ie) {
            alert('@Html.Resource("Layout, ie_error")');
        }
        </script>
        <script type="text/javascript">
        <!--
        jQuery(document).ready(function() {
            if ((jQuery.browser.msie == true) & (jQuery.browser.version <= 8)) {
                var deg2radians = Math.PI * 2 / 360,
                    deg = 90;
                rad = deg * deg2radians,
                costheta = Math.cos(rad),
                sintheta = Math.sin(rad);
                jQuery('.rotatedBlock').css({ filter: 'progid:DXImageTransform.Microsoft.Matrix(M11=' + costheta + ', M12=' + (-1) * sintheta + ', M21=' + sintheta + ', M22=' + costheta + ', SizingMethod="auto expand", enabled=true)' });
            }
            ;
        });
        //-->
        </script>
    
        @if (Request.IsAuthenticated)
        {
        <script type="text/javascript">
        <!--    
        $.ajax({
            url: '/Home/MessageBox',
            type: "GET",
            success: function(result) {
                $("#header_logo").html(result);
            }
        });
        //-->
        </script>
        }
        
        <link href="@Url.Content("~/Content/Layout.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Browser.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Content/script/jquerycssmenu.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Content/script/browser_selector.js")" type="text/javascript"> </script>
        <link href="@((Session["themaStyle"] == "orange") ? Url.Content("~/Content/OrangeStyle.css") : Url.Content("~/Content/Layout.css"))" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <a name="top_page"></a>
        <div id="up_line"></div>
        <div id="header">
            <!--Header-->
            <div id="full_header">
                <div id="header_logo">
                </div>
                <div id="header_upper">
                    <div class="lang">
                        @Html.ActionLink(" ", "English", "Home", null, new { @id = "us" })
                        @Html.ActionLink(" ", "Russian", "Home", null, new { @id = "ru" })
                        @Html.ActionLink(" ", "Ukraine", "Home", null, new { @id = "ua" })
                    </div>
                </div>
                <div id="header_middle">
                </div>
                <div id="header_lower">
                    <div id="auth">
                        @Html.Partial("_LogOnPartial")
                    </div>
                </div>
            </div>
        </div>
        <!--Container for page-->
        <div id="container">
            <div>
                @Html.ActionLink(Html.Resource("Layout, App_HomePage"), "Index", "Home", null, new { @id = "toStartPage" })
            </div>
            <!--Navigation-->
            <div id="myjquerymenu" class="nav">
                @Html.Partial("_Navigation_PartialPage")
                <div class="search">
                </div>
                <br style="clear: left" />
            </div>
            <!--Base Fragment Page-->
            <!--LEFT-->
            <div id="left">
                <div id="text">
                    <div class="dyn">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!--RIGHT-->
            <div id="right">
                <div id="little">@Html.Partial("_News_PartialPage")</div>
            </div>
            <div id="footer">
                <p>
                    <a href="#top_page">@Html.Resource("Layout, App_Footer_TopPage")</a></p>
                <p>
                    @Html.Resource("Layout, _theme")
                    @Html.ActionLink(Html.Resource("Layout, _theme_blue"), "SetThema", "Home", new { themaName = "default" }, null) |
                    @Html.ActionLink(Html.Resource("Layout, _theme_orange"), "SetThema", "Home", new { themaName = "orange" }, null)
                </p>
                <p>
                    &copy; First Team, CHNU &amp; SoftServe Course, @DateTime.Now.Year | All
                    right reserved.</p>
                <p>
                    e-mail: <a href="mailto:chnudotnet_forwardstep@googlegroups.com">chnudotnet_forwardstep@googlegroups.com</a></p>
            </div>
        </div>
    </body>
</html>