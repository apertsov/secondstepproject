@if (Request.IsAuthenticated)
{
    <ul>
        <li>@Html.ActionLink(Html.Resource("Layout, _HorizontalNavigation_HomePage"), "Index", "home")</li>
        <li>@Html.ActionLink(Html.Resource("Layout, _HorizontalNavigation_News"), "Index", "news")</li>
        <li>@Html.ActionLink(Html.Resource("Layout, _HorizontalNavigation_Profile"), "Index", "profile")</li>
        <li>@Html.ActionLink(Html.Resource("Layout, _HorizontalNavigation_Education"), "Index", "education")</li>

        @{ DistanceLessons.Models.DataEntitiesManager _db = new DistanceLessons.Models.DataEntitiesManager();
           if (_db.UserRole(User.Identity.Name) == DistanceLessons.Models.UserRoles.Admin.ToString())
           {
            <li>@Html.ActionLink("Користувачі", "Users", "Admin")</li>
            <li>@Html.ActionLink("Категорії предметів", "Categories", "Admin")</li>
            <!--<li>@Html.ActionLink("Предмети", "Courses", "Admin")</li>
            <li>@Html.ActionLink("Оповіщення", "Message", "Admin")</li>-->
           }
           else if (_db.UserRole(User.Identity.Name) == DistanceLessons.Models.UserRoles.Dean.ToString())
           {
            <li><a href="#">Декан</a></li>
           }
           else if (_db.UserRole(User.Identity.Name) == DistanceLessons.Models.UserRoles.Teacher.ToString())
           {
               <li><a>Викладацька</a>
                <ul>
                    <li>@Html.ActionLink("Мої предмети", "MyCourses", "Teacher")</li>
                    <li><a>Журнал успішності(загальне)</a></li>
                </ul>
            </li>
           }
        }

        <li><a href="#">Корисні посилання</a></li>
    </ul>
}